{% extends '@App/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets
        'bundles/app/css/05_startseite.custom.css'
        'bundles/base/css/13_error_page.custom.css'
    filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block title %}Ressource nicht gefunden{% endblock %}

{% block sidecontent %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 error-container">
                <div class="login-panel panel panel-default panel-default-error">
                    <div class="panel-heading-error">
                        <div class="panel-title-error"><strong>Fehler 404</strong></div>
                    </div>
                    <div class="panel-body panel-error-text">
                        <form role="form">
                            <fieldset>
                                <p>Die angefragte Ressource konnte leider nicht gefunden werden!</p>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}