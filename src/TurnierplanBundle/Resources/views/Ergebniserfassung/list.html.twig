{% block content %}
    <div class="row">
        <div class="col-lg-12" style="padding-bottom: 10px;">
            <input id="spielplanTyp" type="checkbox" data-toggle="toggle" data-on="dynamisch" data-off="statisch" data-size="small" name="spielplanTyp">
        </div>
    </div>

    <table class="table display" id="tabelle_benutzer" cellspacing="0" width="100%">
        <thead>
        <tr>
            <th>Datum/Uhrzeit</th>
            <th>Feld</th>
            <th>Jugend</th>
            <th>Heimmannschaft</th>
            <th>Gastmannschaft</th>
            <th>Heim</th>
            <th>Gast</th>
        </tr>
        </thead>
        <tfoot>
        <tr>
            <th>Datum/Uhrzeit</th>
            <th>Feld</th>
            <th>Jugend</th>
            <th>Heimmannschaft</th>
            <th>Gastmannschaft</th>
            <th>Heim</th>
            <th>Gast</th>
        </tr>
        </tfoot>
        <tbody>
        </tbody>
    </table>

    <script>
        $(document).ready(function() {

            // Setup - add a text input to each footer cell
            $('#tabelle_benutzer tfoot th').each( function () {
                var title = $(this).text();
                $(this).html( '<input type="text" placeholder="'+ title +'" />' );
            } );

            var oTable = $('#tabelle_benutzer').DataTable({
                "ajax": {
                    "url": "/turnierplan/ergebniserfassung/api",
                    "data": function ( d ) {
                        d.ausgabeTyp = $('#spielplanTyp').prop('checked');
                    }
                },
                "responsive": true,
                "autoWidth": false,
                "columnDefs": [
                    { "width": "10%", "targets": 0},
                    { "width": "5%", "targets": 1},
                    { "width": "7.5%", "targets": 2},
                    { "width": "30%", "targets": 3},
                    { "width": "30%", "targets": 4},
                    { "width": "5%", "targets": 5},
                    { "width": "5%", "targets": 6}
                ],
                "columns": [
                    { "data": "uhrzeit" },
                    { "data": "platz" },
                    { "data": "jugend" },
                    { "data": "heim" },
                    { "data": "gast" },
                    { "data": "ergHeim"},
                    { "data": "ergGast"}
                ]
            });

            oTable.columns.adjust().draw();

            // Apply the search
            oTable.columns().every( function () {
                var that = this;

                $( 'input', this.footer() ).on( 'keyup change', function () {
                    if ( that.search() !== this.value ) {
                        that
                                .search( this.value )
                                .draw();
                    }
                } );
            } );

            $('input[type=checkbox][name=spielplanTyp]').change(function() {
                oTable.ajax.reload();
            });
        });

        $(document).on('change', '.inputErg', function(i) {

            var target = i.target;
            var row = target.parentNode.parentNode;
            var ergHeim = row.children[5].children[0].value;
            var ergGast = row.children[6].children[0].value;

            var spielId = $(row).attr('id');

            $.ajax({
                type: "POST",
                url: "/turnierplan/ergebniserfassung/edit",
                data: {
                    ergHeim,
                    ergGast,
                    spielId
                },
            });
        });


    </script>

{% endblock %}