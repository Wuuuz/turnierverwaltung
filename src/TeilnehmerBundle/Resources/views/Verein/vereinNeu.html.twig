{% extends '@App/base_left_menu.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block title %}Verein{% endblock %}

{% block heading %}Verein anlegen{% endblock %}

{% block leftMenu %}
    <li>
        <a href="{{ path('vereinUebersicht') }}"><p class="fa fa-Verein fa-fw">Verein</p> </a>
    </li>
    <li>
        <a href="{{ path('mannschaftUebersicht') }}"><p class="fa fa-bar-Mannschaft-o fa-fw">Mannschaft</p> </a>
    </li>
    <li>
        <a href="#"><p class="fa fa-bar-Schiedsrichter-o fa-fw">Schiedsrichter</p></a>
    </li>
{% endblock %}

{% block content %}
    {% form_theme form '@App/Form/fields.html.twig' %}

    {{ form_start(form) }}

    <div class="row">
        <div class="col-lg-12" style="color:rgb(210,7,2); min-height: 50px; margin-top:10px; ">
            <!-- butttons -->
            {{ form_widget(form.save) }}
            {{ form_widget(form.saveAndClose) }}

            <a href="{{ path('vereinUebersicht') }}" class="btn btn-default btn-lg btn-sm" type="button" style="color:red;">
                <span class="glyphicon glyphicon-remove" aria-hidden="true" style="color:red;"></span><b> Abbrechen</b></a>
        </div>
    </div>
    {% if errors is defined %}
        <div class="alert alert-danger" role="alert">
        {% for error in errors %}
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            <strong>{{ error.message }}</strong>
        {% endfor %}
        </div>
    {% endif %}
    <div class="row">
        <div class="form-group">
            <label for="inputName" class="col-md-1 control-label">Vereinsname</label>
            <div class="col-md-2">
                {{ form_widget(form.name, {'attr': {'placeholder': 'Vereinsname'} }) }}
            </div>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}
