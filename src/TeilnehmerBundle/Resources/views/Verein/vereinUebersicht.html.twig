{% extends '@App/base_left_menu.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block title %}Verein{% endblock %}

{% block heading %} Vereinsübersicht {% endblock %}

{% block leftMenu %}
    <li>
        <a href="{{ path('vereinUebersicht') }}"><p class="fa fa-Verein fa-fw">Verein</p> </a>
    </li>
    <li>
        <a href="{{ path('mannschaftUebersicht') }}"><p class="fa fa-bar-Mannschaft-o fa-fw">Mannschaft</p> </a>
    </li>
    <li>
        <a href="#"><p class="fa fa-bar-Schiedsrichter-o fa-fw">Schiedsrichter</p></a>
    </li>
{% endblock %}

{% block content %}
        <div class="row">
            <div class="col-lg-12" style="color:rgb(210,7,2); min-height: 50px; margin-top:10px; ">
                <!-- butttons -->
                <a  href="{{ path('vereinNeu') }}" class="btn btn-default btn-lg btn-sm" type="button" style="color:green;">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true" style="color:green;"></span><b> Neu</b></a>

                <a href="" class="btn btn-default btn-lg btn-sm" style="color: rgba(19, 84, 174, 1);" type="button">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true" style="color:  rgba(19, 84, 174, 1);"></span><b> Bearbeiten</b></a>

                <a href="" class="btn btn-default btn-lg btn-sm" style="color: rgba(66, 66, 66, 1);" type="button">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true" style="color: rgba(66, 66, 66, 1); "></span><b> Löschen</b></a>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3 col-md-6">
                {% if success_neu is defined %}
                    <div class="alert alert-danger" role="alert">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        <strong>Mannschaft {{ success_neu }} wurde angelegt.</strong>
                    </div>
                {% endif %}
            </div>
        </div>
{% endblock %}