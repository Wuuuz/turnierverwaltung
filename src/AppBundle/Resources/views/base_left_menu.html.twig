{% extends '@App/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block sidecontent %}

<div id="wrapper">
    <div align="left" style="display:block;">
        <div id="uberschrift"style="max-height: 100px;">
            <div class="row">
                <div class= "col-lg-12" style="margin-left: 164px; padding-left:0px !important; height:60px;">
                    <div style="margin-top: 18px; margin-bottom: 18px; margin-left:5px; font-size:20px; color:rgba(150, 34, 34, 0.87);">{% block heading %}{% endblock %}</div>
            </div>
        </div>
    </div>

    <div class="navbar-default sidebar" role="navigation">
        <div class="sidebar-nav navbar-collapse">
            <ul class="nav" id="side-menu">
                {% block leftMenu %}{% endblock %}
            </ul>
        </div>
        <div class="stoppuhr">
            <h2><time>00:00</time></h2>
            <div class="stoppuhr_button">
                <button id="start" class="glyphicon glyphicon-play"></button>
                <button id="stop" class="glyphicon glyphicon-stop"></button>
                <button id="clear" class="glyphicon glyphicon-refresh"></button>
            </div>
        </div>
    </div>
</div>
    <div id="page-wrapper" style="min-height: 288px; padding-top: 3px;">
        {% if app.session.flashBag.has('success') %}
            <div class="alert alert-success alert-dismissible fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                {% for flash_message in app.session.flashBag.get('success') %}
                    <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> <strong>{{ flash_message }}</strong>
                {% endfor %}
            </div>
        {% endif %}

        {% if app.session.flashBag.has('info') %}
        <div class="alert alert-info alert-dismissible fade in">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            {% for flash_message in app.session.flashBag.get('info') %}
                <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> <strong>{{ flash_message }}</strong>
            {% endfor %}
        </div>
        {% endif %}

        {% if app.session.flashBag.has('warning') %}
            <div class="alert alert-warning alert-dismissible fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                {% for flash_message in app.session.flashBag.get('warning') %}
                    <span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span> <strong>{{ flash_message }}</strong>
                {% endfor %}
            </div>
        {% endif %}

        {% if app.session.flashBag.has('danger') %}
            <div class="alert alert-danger alert-dismissible fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                {% for flash_message in app.session.flashBag.get('danger') %}
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> <strong>{{ flash_message }}</strong>
                {% endfor %}
            </div>
        {% endif %}

        {% block content %}{% endblock %}
    </div>
    <script src="{{ asset('bundles/app/js/06_clock.custom.js') }}"></script>
{% endblock %}