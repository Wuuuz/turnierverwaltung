{% extends '@App/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets 'bundles/app/css/05_startseite.custom.css'
        filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block title %}Startseite{% endblock %}

{% block sidecontent %}
        <div align="center">
            {% if (is_granted('ROLE_USER_VIEW') or is_granted('ROLE_GROUP_VIEW'))  %}
            <div class="col-sm-6 col-md-4 container_startseite">
                <div class="thumbnail">
                    {% image 'bundles/app/images/benutzer.jpg' %}
                    <img src="{{ asset_url }}" alt="Benutzer" class="startseite bild_startseite"/>
                    {% endimage %}
                    <div class="caption">
                        <p><a href="{{ path('benutzerList') }}" class="btn btn-default button_startseite" role="button">Benutzer</a></p>
                    </div>
                </div>
            </div>
            {% endif %}

            {% if (is_granted('ROLE_VEREIN_VIEW') or is_granted('ROLE_MANNSCHAFT_VIEW') or is_granted('ROLE_SR_VIEW'))  %}
            <div class="col-sm-6 col-md-4 container_startseite">
                <div class="thumbnail">
                    {% image 'bundles/app/images/teilnehmer.jpg' %}
                    <img src="{{ asset_url }}" alt="Teilnehmer" class="startseite bild_startseite"/>
                    {% endimage %}
                    <div class="caption">
                        <p><a href="{{ path('mannschaftList') }}" class="btn btn-default button_startseite" role="button">Teilnehmer</a></p>
                    </div>
                </div>
            </div>
            {% endif %}
            <div class="col-sm-6 col-md-4 container_startseite">
                <div class="thumbnail">
                    {% image 'bundles/app/images/spielplan.jpg' %}
                    <img src="{{ asset_url }}" alt="Spielplan" class="startseite bild_startseite"/>
                    {% endimage %}
                    <div class="caption">
                        <p><a href="#" class="btn btn-default button_startseite" role="button">Spielplan</a></p>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-md-4 container_startseite">
                <div class="thumbnail">
                    {% image 'bundles/app/images/turnier.jpg' %}
                    <img src="{{ asset_url }}" alt="Turnier" class="startseite bild_startseite"/>
                    {% endimage %}
                    <div class="caption">
                        <p><a href="{{ path('turnierEdit') }}" class="btn btn-default button_startseite" role="button">Turnier</a></p>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-md-4 container_startseite">
                <div class="thumbnail">
                    {% image 'bundles/app/images/live_screen.jpg' %}
                    <img src="{{ asset_url }}" alt="Livescreen" class="startseite bild_startseite"/>
                    {% endimage %}
                    <div class="caption">
                        <p><a href="#" class="btn btn-default button_startseite" role="button">Livescreen</a></p>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-md-4 container_startseite">
                <div class="thumbnail">
                    {% image 'bundles/app/images/anmeldungen.jpg' %}
                    <img src="{{ asset_url }}" alt="Anmeldungen" class="startseite bild_startseite"/>
                    {% endimage %}
                    <div class="caption">
                        <p><a href="{{ path('anmeldungList') }}" class="btn btn-default button_startseite" role="button">Anmeldungen</a></p>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}