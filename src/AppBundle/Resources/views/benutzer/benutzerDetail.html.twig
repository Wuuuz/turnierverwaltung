{% extends '@App/base_left_menu.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block title %}Benutzer{% endblock %}

{% block heading %} Benutzer anlegen {% endblock %}

{% block leftMenu %}
    <li>
        <a href="#"><p class="fa fa-fw">Benutzer</p> </a>
    </li>
{% endblock %}

{% block content %}
        <div class="row">
            <div class="col-lg-12" style="color:rgb(210,7,2); min-height: 50px; margin-top:10px; ">
                <!-- butttons -->
                <a href="" class="btn btn-default btn-lg btn-sm" style="color: rgba(13, 135, 13, 1);" type="button">
                    <span class="glyphicon glyphicon-check" aria-hidden="true" style="color: rgba(13, 135, 13, 1);"></span><b>  Speichern</b></a>

                <a href="" class="btn btn-default btn-lg btn-sm" style="color:  rgba(66, 66, 66, 1);" type="button">
                    <span class="glyphicon glyphicon-ok" aria-hidden="true" style="color:  rgba(66, 66, 66, 1);"></span><b> Speichern & Schlie√üen</b></a>

                <a href="" class="btn btn-default btn-lg btn-sm" type="button" style="color:red;">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true" style="color:red;"></span><b> Abbrechen</b></a>
            </div>
        </div>
        <div class="row">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="inputName" class="col-md-2 control-label">Vorname</label>
                    <div class="col-md-2">
                        <input type="text" class="form-control" id="inputVorname"
                               placeholder="Vorname">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputName" class="col-md-2 control-label">Nachname</label>
                    <div class="col-md-2">
                        <input type="text" class="form-control" id="inputNachname" placeholder="Nachname">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputAccountName" class="col-md-2 control-label">Benutzername</label>
                    <div class="col-md-2">
                        <input type="text" class="form-control" id="inputAccountName" placeholder="Benutzername">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail" class="col-md-2 control-label">E-Mail Adresse</label>
                    <div class="col-md-2">
                        <input type="email" class="form-control" id="inputEmail" placeholder="E-Mail Adresse">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Berechtigungsgruppen</label>
                    <div class="col-md-5">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox">
                                Turnierleiter
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox">
                                Schiedsrichter-Verantwortlicher
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox">
                                Ergebnis-Verantwortlicher
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox">
                                Ablauf-Verantwortlicher
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox">
                                Gast
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword" class="col-md-2 control-label">Kennwort</label>
                    <div class="col-md-2">
                        <input type="password" class="form-control" id="inputPassword" placeholder="Kennwort">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword" class="col-md-2 control-label">Kennwort wiederholen</label>
                    <div class="col-md-2">
                        <input type="password" class="form-control" id="inputPassword" placeholder="Kennwort wiederholen">
                    </div>
                </div>
            </form>
        </div>
{% endblock %}